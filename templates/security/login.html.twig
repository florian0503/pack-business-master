{% extends 'base.html.twig' %}

{% block title %}Connexion — ProService{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/auth.js') }}" defer></script>
{% endblock %}

{% block body %}
<section class="auth">
    <div class="auth__card">
        <h1 class="auth__title">Connexion</h1>
        <p class="auth__subtitle">Accédez à votre espace personnel</p>

        {% if error %}
            <div class="auth__alert auth__alert--error">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        {% for message in app.flashes('success') %}
            <div class="auth__alert auth__alert--success">
                {{ message }}
            </div>
        {% endfor %}

        <form method="post" class="auth__form">
            <div class="auth__field">
                <label for="input-email" class="auth__label">Email</label>
                <input type="email" id="input-email" name="_username" value="{{ last_username }}" required autofocus class="auth__input" placeholder="votre@email.com">
            </div>

            <div class="auth__field">
                <label for="input-password" class="auth__label">Mot de passe</label>
                <div class="auth__password-wrapper">
                    <input type="password" id="input-password" name="_password" required class="auth__input" placeholder="Votre mot de passe">
                    <button type="button" class="auth__password-toggle" aria-label="Afficher le mot de passe">
                        <svg class="auth__icon-eye" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/><circle cx="12" cy="12" r="3"/></svg>
                        <svg class="auth__icon-eye-off" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display:none"><path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"/><line x1="1" y1="1" x2="23" y2="23"/></svg>
                    </button>
                </div>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button type="submit" class="btn btn--primary auth__submit">Se connecter</button>
        </form>

        <p class="auth__footer">
            Pas encore de compte ?
            <a href="{{ path('app_register') }}" class="auth__link">Créer un compte</a>
        </p>
    </div>
</section>
{% endblock %}
