{% extends 'base.html.twig' %}

{% block title %}Inscription — ProService{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/auth.js') }}" defer></script>
{% endblock %}

{% block body %}
<section class="auth">
    <div class="auth__card">
        <h1 class="auth__title">Créer un compte</h1>
        <p class="auth__subtitle">Rejoignez ProService dès maintenant</p>

        {{ form_start(registrationForm, {'attr': {'class': 'auth__form', 'novalidate': 'novalidate'}}) }}

            <div class="auth__row">
                <div class="auth__field">
                    {{ form_label(registrationForm.firstName, null, {'label_attr': {'class': 'auth__label'}}) }}
                    {{ form_widget(registrationForm.firstName, {'attr': {'class': 'auth__input'}}) }}
                    {{ form_errors(registrationForm.firstName) }}
                </div>
                <div class="auth__field">
                    {{ form_label(registrationForm.lastName, null, {'label_attr': {'class': 'auth__label'}}) }}
                    {{ form_widget(registrationForm.lastName, {'attr': {'class': 'auth__input'}}) }}
                    {{ form_errors(registrationForm.lastName) }}
                </div>
            </div>

            <div class="auth__field">
                {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'auth__label'}}) }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'auth__input'}}) }}
                {{ form_errors(registrationForm.email) }}
            </div>

            <div class="auth__field">
                {{ form_label(registrationForm.plainPassword.first, null, {'label_attr': {'class': 'auth__label'}}) }}
                <div class="auth__password-wrapper">
                    {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'auth__input'}}) }}
                    <button type="button" class="auth__password-toggle" aria-label="Afficher le mot de passe">
                        <svg class="auth__icon-eye" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/><circle cx="12" cy="12" r="3"/></svg>
                        <svg class="auth__icon-eye-off" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display:none"><path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"/><line x1="1" y1="1" x2="23" y2="23"/></svg>
                    </button>
                </div>
            </div>

            <div class="auth__field">
                {{ form_label(registrationForm.plainPassword.second, null, {'label_attr': {'class': 'auth__label'}}) }}
                <div class="auth__password-wrapper">
                    {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'auth__input'}}) }}
                    <button type="button" class="auth__password-toggle" aria-label="Afficher le mot de passe">
                        <svg class="auth__icon-eye" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/><circle cx="12" cy="12" r="3"/></svg>
                        <svg class="auth__icon-eye-off" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display:none"><path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"/><line x1="1" y1="1" x2="23" y2="23"/></svg>
                    </button>
                </div>
                {{ form_errors(registrationForm.plainPassword) }}
            </div>

            <button type="submit" class="btn btn--primary auth__submit">Créer mon compte</button>

        {{ form_end(registrationForm) }}

        <p class="auth__footer">
            Déjà inscrit ?
            <a href="{{ path('app_login') }}" class="auth__link">Se connecter</a>
        </p>
    </div>
</section>
{% endblock %}
